extends ../externals/adminbase

block content
  main.main
    .main__cover
      .main__filter#main-filter
        .main__filter__cover
          span.main__filter-tag.query(data-query=`?`) all
          span.main__filter-tag.query(data-query=`?order=releasedDate,desc`) new
          span.main__filter-tag.query(data-query=`?order=updatedAt,desc`) last updated
          span.main__filter-tag.query(data-query=`?rating=gte,7&order=releasedDate,desc`) top
          span.main__filter-tag.query(data-query=`?text=trending`) trending
          span.main__filter-tag.query(data-query=`?releasedDate=gte,01/01/2022&order=releasedDate,desc`) this year

      .main__container#main-container
        .main__container__cover#items-container
          if(games && games.length)
            each game in games
              +dbmovieCard(game, 'game')
            


        .center-components.padding-a1
          span.show-more#show-more show more


  .popup.display-off#delete-game-popup
    .popup-box.popup-box-normal
      //- 
      .popup-close
        i.fas.fa-times
      .popup-content.create-content
        form.create-new#delete-game
          .form-heading
            h1 Are you sure you want to delete the game
          
          .center-components
            button.btn-black.btn-normal#delete-game-btn(type="submit")
              span.btn-content yes, delete

