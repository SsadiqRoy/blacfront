extends ../externals/adminbase

block content
  main.main
    .main__cover
      //- .main__filter#main-filter
        .main__filter__cover
          span.main__filter-tag unviewed
          span.main__filter-tag viewed
          //- span.main__filter-tag problem
          //- span.main__filter-tag suggestions
      .main__container#main-container
        .main__container__cover#items-container
          if(problems && problems.length)
            each problem in problems
              +notificationCard(problem)


        .center-components.padding-a1
          span.show-more#show-more show more


  .popup.display-off#delete-notification-popup
    .popup-box.popup-box-normal
      //- 
      .popup-close
        i.fas.fa-times
      .popup-content.create-content
        form.create-new#delete-notification
          .form-heading
            h1 Are you sure you want to delete the notification
          
          .center-components
            button.btn-black.btn-normal#delete-notification-btn(type="submit")
              span.btn-content yes, delete
