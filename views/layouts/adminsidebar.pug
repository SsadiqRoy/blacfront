aside.sidebar#dashboard-sidebar
  .sidebar__cover
    ul
      li
        - let clas = ext.page === 'movies' ? 'sidebar__item--active' : ''
        a(class=`${clas}` href='/dashboard/movies' )
          span.sidebar__icon
            i.fas.fa-film
          span.sidebar__item movies
      li
        - clas = ext.page === 'series'? 'sidebar__item--active': ''
        a(class=`${clas}` href='/dashboard/series')
          span.sidebar__icon
            i.fas.fa-tv
          span.sidebar__item series
      li
        - clas = ext.page === 'games'? 'sidebar__item--active': ''
        a(class=`${clas}` href='/dashboard/games')
          span.sidebar__icon
            i.fas.fa-gamepad
          span.sidebar__item games
      li
        - clas = ext.page === 'notifications'? 'sidebar__item--active': ''
        a(class=`${clas}` href='/dashboard/notifications')
          span.sidebar__icon
            i.fas.fa-bell
          span.sidebar__item notifications
      li
        - clas = ext.page === 'problems'? 'sidebar__item--active': ''
        a(class=`${clas}` href='/dashboard/problems')
          span.sidebar__icon
